<UserControl x:Class="LoLTracker.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LoLTracker.ViewModels">
    <UserControl.DataContext>
        <vm:DashboardViewModel/>
    </UserControl.DataContext>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                Margin="0,0,0,12">
            <Border Background="#FF262626"
                    Padding="12"
                    Margin="6"
                    CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="Total Wins"
                            FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalWins}"
                            FontSize="18"/>
                </StackPanel>
            </Border>

            <Border Background="#FF262626"
                    Padding="12"
                    Margin="6"
                    CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="Total Losses"
                            FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalLosses}"
                            FontSize="18"/>
                </StackPanel>
            </Border>

            <Border Background="#FF262626"
                    Padding="12"
                    Margin="6"
                    CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="Best Champion"
                            FontWeight="Bold"/>
                    <TextBlock Text="{Binding BestChampion}"
                            FontSize="16"/>
                </StackPanel>
            </Border>

            <Border Background="#FF262626"
                    Padding="12"
                    Margin="6"
                    CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="Worst Champion"
                            FontWeight="Bold"/>
                    <TextBlock Text="{Binding WorstChampion}"
                            FontSize="16"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <DataGrid Grid.Row="1"
                ItemsSource="{Binding ChampionStats}"
                AutoGenerateColumns="False"
                HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Champion"
                        Binding="{Binding Champion}"
                        IsReadOnly="True"/>
                <DataGridTextColumn Header="Wins"
                        Binding="{Binding Wins}"
                        IsReadOnly="True"/>
                <DataGridTextColumn Header="Losses"
                        Binding="{Binding Losses}"
                        IsReadOnly="True"/>
                <DataGridTextColumn Header="Win Rate (%)"
                        Binding="{Binding WinRate, StringFormat=N2}"
                        IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
