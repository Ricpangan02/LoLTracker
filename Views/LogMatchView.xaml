<UserControl x:Class="LoLTracker.Views.LogMatchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,8">
            <ComboBox Width="260"
                      ItemsSource="{Binding Champions}"
                      SelectedItem="{Binding SelectedChampion}"
                      Margin="4"/>
            <CheckBox Content="Win?"
                      IsChecked="{Binding IsWin}"
                      VerticalAlignment="Center"
                      Margin="8,0"/>
            <Button Content="Add Match"
                    Command="{Binding AddMatchCommand}"
                    Margin="8,0"/>
        </StackPanel>

        <TextBox Grid.Row="1"
                 Text="{Binding Notes}"
                 AcceptsReturn="True"
                 Height="160"/>
    </Grid>
</UserControl>
