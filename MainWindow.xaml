<Window x:Class="LoLTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Arena Tracker"
        Height="800"
        Width="1550"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Assets/arena_icon.ico">
    <DockPanel Background="{StaticResource WindowBackground}">
        <!-- Sidebar -->
        <Border DockPanel.Dock="Left"
                Width="220"
                Background="{StaticResource PanelGradient}"
                BorderBrush="{StaticResource CardBorder}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0"
                        Background="#FF252B47"
                        Padding="20,24"
                        BorderBrush="{StaticResource CardBorder}"
                        BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="âš”ï¸ Arena Tracker"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryAccent}"/>
                        <TextBlock Text="Summoner's Rift"
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation -->
                <StackPanel Grid.Row="1"
                            Margin="8,16,8,8">
                    <Button Content="ðŸ“Š Dashboard"
                            Command="{Binding GoDashboard}"
                            Style="{StaticResource SidebarButton}"/>
                    <Button Content="âž• Log Match"
                            Command="{Binding GoLogMatch}"
                            Style="{StaticResource SidebarButton}"/>
                    <Button Content="ðŸ“œ History"
                            Command="{Binding GoHistory}"
                            Style="{StaticResource SidebarButton}"/>
                    <Button Content="ðŸ† Champions"
                            Command="{Binding GoChampions}"
                            Style="{StaticResource SidebarButton}"/>
                    <Button Content="âš™ï¸ Settings"
                            Command="{Binding GoSettings}"
                            Style="{StaticResource SidebarButton}"/>
                </StackPanel>

                <!-- Footer -->
                <Border Grid.Row="2"
                        Background="#FF252B47"
                        Padding="16,12"
                        BorderBrush="{StaticResource CardBorder}"
                        BorderThickness="0,1,0,0">
                    <StackPanel>
                        <TextBlock Text="SUMMONER"
                                   Style="{StaticResource StatLabel}"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding SummonerName}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryAccent}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Content area -->
        <Border Background="{StaticResource WindowBackground}">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>
    </DockPanel>
</Window>
