<Window x:Class="LoLTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoL Tracker"
        Height="600"
        Width="1000">
        <DockPanel>
                <!-- Sidebar -->
                <StackPanel DockPanel.Dock="Left"
                            Width="180"
                            Background="{StaticResource PanelBackground}">
                        <TextBlock Text="LoL Tracker"
                                   FontSize="20"
                                   Margin="12"/>
                        <Button Content="Dashboard"
                                Command="{Binding GoDashboard}"/>
                        <Button Content="Log Match"
                                Command="{Binding GoLogMatch}"/>
                        <Button Content="History"
                                Command="{Binding GoHistory}"/>
                        <Button Content="Champions"
                                Command="{Binding GoChampions}"/>
                        <Button Content="Settings"
                                Command="{Binding GoSettings}"/>
                        <StackPanel Margin="8"
                                    VerticalAlignment="Bottom">
                                <TextBlock Text="Summoner:"
                                           Margin="6,12,6,0"/>
                                <TextBlock Text="{Binding SummonerName}"
                                           Margin="6,0"/>
                        </StackPanel>
                </StackPanel>

                <!-- Content area -->
                <ContentControl Content="{Binding CurrentView}"/>
        </DockPanel>
</Window>
